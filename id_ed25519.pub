with tab2:
    number_sch = st.text_input("ğŸ“ Phone Number (with +91)", 
key="sched_number")
    message_sch = st.text_area("ğŸ’¬ Message", key="sched_message")
    date_sch = st.date_input("ğŸ“… Select Date", 
value=datetime.date.today())
    hour_sch = st.number_input("ğŸ• Hour", min_value=1, max_value=12, 
value=10)
    minute_sch = st.number_input("ğŸ•‘ Minute", min_value=0, max_value=59, 
