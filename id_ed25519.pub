# Function to recognize speech
def recognize_command():
    recognizer = sr.Recognizer()
    with sr.Microphone() as source:
        with st.spinner("ğŸ§ Listening... Please speak"):
            recognizer.adjust_for_ambient_noise(source)
            try:
                audio = recognizer.listen(source, timeout=5)
                text = recognizer.recognize_google(audio)
                return text.lower()
            except sr.WaitTimeoutError:
                return "Timeout: No speech detected."
            except sr.UnknownValueError:
                return "Sorry, could not understand your voice."
            except sr.RequestError:
                return "Network error. Please check your internet."

# Section: Voice Command
st.header("ğŸ¤ Voice Command")
if st.button("Start Listening"):
    command = recognize_command()
    st.markdown(f"ğŸ—£ï¸ You said: **{command}**")

    if command == "exit":
        st.success("ğŸ‘‹ Exiting voice assistant.")
    elif command.startswith("search for"):
        query = command.replace("search for", "").strip()
        if "youtube" in query:
            search = query.replace("on youtube", "").strip().replace(" ", 
"+")
            os.system(f'start chrome 
"https://www.youtube.com/results?search_query={search}"')
            st.success(f"ğŸ” Searching YouTube for: {search.replace('+', ' 
')}")
        else:
            search = query.replace(" ", "+")
            os.system(f'start chrome 
"https://www.google.com/search?q={search}"')
            st.success(f"ğŸ” Searching Google for: {search.replace('+', ' 
')}")
    else:
        st.warning("âš ï¸ Executing raw command. Be cautious!")
        os.system(command)
        st.success(f"âœ… Executed: {command}")

# Section: WhatsApp Message Sender
st.header("ğŸ“± Send WhatsApp Message")

tab1, tab2 = st.tabs(["Send Instantly", "Schedule Message"])

with tab1:
