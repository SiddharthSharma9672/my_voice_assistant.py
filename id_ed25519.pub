            if send_time < now:
                st.warning("â³ Scheduled time is in the past. Please 
adjust.")
            else:
                pywhatkit.sendwhatmsg(number_sch, message_sch, hour_24, 
minute_sch)
                st.success(f"ğŸ“… Message scheduled at 
{hour_sch}:{minute_sch:02d} {am_pm} on {date_sch}")
        except Exception as e:
            st.error(f"âŒ Failed to schedule: {e}")

